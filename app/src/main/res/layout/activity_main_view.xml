<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.hch.qewqs.project_army.MainViewActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/flowAnimationTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="프로토타입 개발버전으로 진행중인 상태입니다."
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow android:layout_weight="1">

                <Button
                    android:id="@+id/category_one"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:drawableTop="@drawable/list"
                    android:text="공석/목록조회"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/category_two"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:drawableTop="@drawable/notice"
                    android:text="특기병 모집공지"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow android:layout_weight="1">

                <Button
                    android:id="@+id/category_three"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:drawableTop="@drawable/quiz"
                    android:text="Quiz"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/category_four"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:drawableTop="@drawable/qa"
                    android:onClick="onClick4"
                    android:text="군지식IN"
                    android:textSize="20dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:gravity="center"
            android:text="광고위치...." />
    </LinearLayout>

</LinearLayout>
